# 전처리기
import numpy as np
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Dense

# 데이터
x = np.array([1,2,3])
y = np.array([1,2,3])

# 모델
model = Sequential()
model.add(Dense(3, input_dim=1))
model.add(Dense(5))
model.add(Dense(10))
model.add(Dense(5))
model.add(Dense(3))
model.add(Dense(1))


# 컴파일, 훈련
model.compile(loss='mse', optimizer='adam')
model.fit(x,y,epochs=108)

# 평가 예측
loss = model.evaluate(x, y)
print('loss: ', loss)

result = model.predict([6])
print('[6의 예측값]: ', result)

